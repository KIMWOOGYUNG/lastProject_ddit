<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="http://www.springframework.org/tags" prefix="spring"%>

<style>
#content {
	padding: 50px;
}
</style>

<div id="content">
	<h1>프로젝트명</h1>

<div class="card card-info">
              <div class="card-header">
                <h3 class="card-title">프로젝트명</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form class="form-horizontal">
                <div class="card-body">
                
                  <div class="form-group row">
                    <label for="project_dept" class="col-sm-1 col-form-label">부서</label>
                    <div class="col-sm-1">
                      <input type="text" class="form-control" id="dept" placeholder="개발팀">
                    </div>
                  </div>
                  
                  <div class="form-group row">
                    <label for="project_content" class="col-sm-1 col-form-label">내용</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="content" placeholder="프로젝트 내용">
                    </div>
                  </div>
                  
                  <div class="form-group">
	               <div class="input-group">
	                 <div class="input-group-prepend">
	                   <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
	                 </div>
	                 <input type="text" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="mm/dd/yyyy" data-mask="" im-insert="false">
	               </div>
	               <div class="input-group">
	                 <div class="input-group-prepend">
	                   <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
	                 </div>
	                 <input type="text" class="form-control" data-inputmask-alias="datetime" data-inputmask-inputformat="mm/dd/yyyy" data-mask="" im-insert="false">
	               </div>
	             </div>
                  
                  <div class="form-group row">
                    <div class="offset-sm-2 col-sm-10">
                      <div class="form-check">
                      </div>
                    </div>
                  </div>
                  
                  <div class="form-group row">
                    <label for="project_important" class="col-sm-1 col-form-label">중요도</label>
                    <div class="col-sm-1">
                      <input type="text" class="form-control" id="dept" placeholder="높음">
                    </div>
                  </div>
                  
                  <div class="form-group row">
                    <label for="project_status" class="col-sm-1 col-form-label">상태</label>
                    <div class="col-sm-1">
                      <input type="text" class="form-control" id="dept" placeholder="진행중">
                    </div>
                  </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="submit" class="btn btn-info">Sign in</button>
                  <button type="submit" class="btn btn-default float-right">Cancel</button>
                </div>
                <!-- /.card-footer -->
              </form>
            </div>

<div class="col-sm-6">
	<!-- textarea -->
	<div class="form-group">
		<label>Textarea</label>
		<textarea class="form-control" rows="3" placeholder="Enter ..."></textarea>
	</div>
</div>
</div>